%h1 All Movies

%table#movies
  %thead
    %tr
      %th <a href="/sorted_by_title" id = "title_header" class = "table#movies th.hilite">Movie Title</a>
      %th Rating
      %th <a href="/sorted_by_date" id = "release_date_header">Release Date</a>
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
